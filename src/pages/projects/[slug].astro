---
import { Image } from "astro:assets";
import Layout from "../../layouts/Layout.astro";
import { getLangFromUrl, getTranslations } from "../../i18n/utils";

export async function getStaticPaths() {
    const locales = ["en", "es"];
    const paths = [];

    for (const locale of locales) {
        const { translations } = await import(`../../i18n/translations.ts`);
        const t = translations[locale as keyof typeof translations];

        for (const project of t.projects.items) {
            paths.push({
                params: { slug: project.slug },
                props: {
                    project,
                    locale,
                    backText:
                        locale === "en"
                            ? "Back to Projects"
                            : "Volver a Proyectos",
                },
            });
        }
    }

    return paths;
}

const { project, locale, backText } = Astro.props;
---

<Layout title={`${project.title} | Portfolio`}>
    <div
        class="min-h-screen bg-gradient-to-b from-slate-950 via-slate-900 to-slate-950"
    >
        <!-- Hero Section -->
        <section class="relative py-20 overflow-hidden">
            <div
                class="absolute inset-0 bg-gradient-to-r from-cyan-500/10 to-purple-500/10 blur-3xl"
            >
            </div>

            <div class="container mx-auto px-6 relative z-10">
                <!-- Back Button -->
                <a
                    href={`/${locale === "en" ? "" : locale}`}
                    class="inline-flex items-center gap-2 text-cyan-400 hover:text-cyan-300 transition-colors mb-8 group"
                >
                    <svg
                        class="w-5 h-5 transition-transform group-hover:-translate-x-1"
                        fill="none"
                        stroke="currentColor"
                        viewBox="0 0 24 24"
                    >
                        <path
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            stroke-width="2"
                            d="M15 19l-7-7 7-7"></path>
                    </svg>
                    <span>{backText}</span>
                </a>

                <!-- Project Title & Image -->
                <div class="grid lg:grid-cols-2 gap-12 items-center">
                    <div class="space-y-6">
                        <h1
                            class="text-5xl font-bold text-slate-100 leading-tight"
                        >
                            {project.title}
                        </h1>
                        <p class="text-xl text-slate-300 leading-relaxed">
                            {project.description}
                        </p>
                        <div class="flex flex-wrap gap-3">
                            {
                                project.tech.map((tech: string) => (
                                    <span class="px-4 py-2 bg-cyan-950/30 text-cyan-400 rounded-lg font-mono text-sm border border-cyan-500/20">
                                        {tech}
                                    </span>
                                ))
                            }
                        </div>
                        {
                            project.demoUrl && (
                                <div class="pt-4">
                                    <a
                                        href={project.demoUrl}
                                        target="_blank"
                                        rel="noopener noreferrer"
                                        class="inline-flex items-center gap-2 px-6 py-3 bg-gradient-to-r from-cyan-500 to-purple-500 text-white font-semibold rounded-lg hover:shadow-lg hover:shadow-cyan-500/50 transition-all hover:-translate-y-1"
                                    >
                                        <svg
                                            class="w-5 h-5"
                                            fill="none"
                                            stroke="currentColor"
                                            viewBox="0 0 24 24"
                                        >
                                            <path
                                                stroke-linecap="round"
                                                stroke-linejoin="round"
                                                stroke-width="2"
                                                d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"
                                            />
                                        </svg>
                                        <span>{locale === "en" ? "View Live Demo" : "Ver Demo en Vivo"}</span>
                                    </a>
                                </div>
                            )
                        }
                    </div>

                    <div
                        class="rounded-2xl overflow-hidden border border-slate-800 shadow-2xl"
                    >
                        <Image
                            src={project.image}
                            alt={project.title}
                            class="w-full h-auto object-cover"
                            loading="lazy"
                            width={600}
                            height={400}
                            format="webp"
                        />
                    </div>
                </div>
            </div>
        </section>

        <!-- Project Details -->
        <section class="py-16">
            <div class="container mx-auto px-6">
                <div class="max-w-4xl mx-auto space-y-16">
                    <!-- Overview -->
                    <div
                        class="bg-slate-900/50 rounded-2xl p-8 border border-slate-800"
                    >
                        <h2
                            class="text-3xl font-bold text-slate-100 mb-6 flex items-center gap-3"
                        >
                            <span
                                class="w-2 h-8 bg-gradient-to-b from-cyan-400 to-purple-500 rounded-full"
                            ></span>
                            {
                                locale === "en"
                                    ? "Project Overview"
                                    : "Descripción del Proyecto"
                            }
                        </h2>
                        <p class="text-slate-300 text-lg leading-relaxed">
                            {project.fullDescription}
                        </p>
                    </div>

                    <!-- Key Features -->
                    <div
                        class="bg-slate-900/50 rounded-2xl p-8 border border-slate-800"
                    >
                        <h2
                            class="text-3xl font-bold text-slate-100 mb-6 flex items-center gap-3"
                        >
                            <span
                                class="w-2 h-8 bg-gradient-to-b from-cyan-400 to-purple-500 rounded-full"
                            ></span>
                            {
                                locale === "en"
                                    ? "Key Features"
                                    : "Características Principales"
                            }
                        </h2>
                        <div class="grid md:grid-cols-2 gap-4">
                            {
                                project.features.map((feature: string) => (
                                    <div class="flex items-start gap-3 p-4 bg-slate-800/50 rounded-lg border border-slate-700/50 hover:border-cyan-500/30 transition-colors">
                                        <svg
                                            class="w-6 h-6 text-cyan-400 flex-shrink-0 mt-0.5"
                                            fill="none"
                                            stroke="currentColor"
                                            viewBox="0 0 24 24"
                                        >
                                            <path
                                                stroke-linecap="round"
                                                stroke-linejoin="round"
                                                stroke-width="2"
                                                d="M5 13l4 4L19 7"
                                            />
                                        </svg>
                                        <span class="text-slate-300">
                                            {feature}
                                        </span>
                                    </div>
                                ))
                            }
                        </div>
                    </div>

                    <!-- Screenshots Gallery -->
                    {
                        project.screenshots && project.screenshots.length > 0 && (
                            <div class="bg-slate-900/50 rounded-2xl p-8 border border-slate-800">
                                <h2 class="text-3xl font-bold text-slate-100 mb-6 flex items-center gap-3">
                                    <span class="w-2 h-8 bg-gradient-to-b from-cyan-400 to-purple-500 rounded-full"></span>
                                    {locale === "en" ? "Screenshots" : "Capturas de Pantalla"}
                                </h2>
                                <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-4">
                                    {project.screenshots.map((screenshot: any, index: number) => (
                                        <div class="group relative overflow-hidden rounded-lg border border-slate-700 hover:border-cyan-500/30 transition-all">
                                            <Image
                                                src={screenshot}
                                                alt={`${project.title} screenshot ${index + 1}`}
                                                class="w-full h-auto object-cover transition-transform duration-300 group-hover:scale-105"
                                                loading="lazy"
                                                width={400}
                                                height={300}
                                                format="webp"
                                            />
                                        </div>
                                    ))}
                                </div>
                            </div>
                        )
                    }

                    <!-- Challenges & Solutions -->
                    <div
                        class="bg-slate-900/50 rounded-2xl p-8 border border-slate-800"
                    >
                        <h2
                            class="text-3xl font-bold text-slate-100 mb-6 flex items-center gap-3"
                        >
                            <span
                                class="w-2 h-8 bg-gradient-to-b from-cyan-400 to-purple-500 rounded-full"
                            ></span>
                            {
                                locale === "en"
                                    ? "Challenges & Solutions"
                                    : "Desafíos y Soluciones"
                            }
                        </h2>
                        <div
                            class="bg-gradient-to-r from-orange-500/10 to-red-500/10 rounded-xl p-6 border border-orange-500/20"
                        >
                            <p class="text-slate-300 text-lg leading-relaxed">
                                {project.challenges}
                            </p>
                        </div>
                    </div>

                    <!-- Results & Impact -->
                    <div
                        class="bg-slate-900/50 rounded-2xl p-8 border border-slate-800"
                    >
                        <h2
                            class="text-3xl font-bold text-slate-100 mb-6 flex items-center gap-3"
                        >
                            <span
                                class="w-2 h-8 bg-gradient-to-b from-cyan-400 to-purple-500 rounded-full"
                            ></span>
                            {
                                locale === "en"
                                    ? "Results & Impact"
                                    : "Resultados e Impacto"
                            }
                        </h2>
                        <div
                            class="bg-gradient-to-r from-green-500/10 to-emerald-500/10 rounded-xl p-6 border border-green-500/20"
                        >
                            <p class="text-slate-300 text-lg leading-relaxed">
                                {project.results}
                            </p>
                        </div>
                    </div>

                    <!-- CTA Section -->
                    <div
                        class="bg-gradient-to-r from-cyan-500/10 to-purple-500/10 rounded-2xl p-8 border border-cyan-500/20 text-center"
                    >
                        <h3 class="text-2xl font-bold text-slate-100 mb-4">
                            {
                                locale === "en"
                                    ? "Interested in working together?"
                                    : "¿Interesado en trabajar juntos?"
                            }
                        </h3>
                        <p class="text-slate-300 mb-6">
                            {
                                locale === "en"
                                    ? "Let's discuss how I can help bring your project to life."
                                    : "Hablemos sobre cómo puedo ayudar a dar vida a tu proyecto."
                            }
                        </p>
                        <a
                            href={`/${locale === "en" ? "" : locale}#contact`}
                            class="inline-block px-8 py-3 bg-gradient-to-r from-cyan-500 to-purple-500 text-white font-semibold rounded-lg hover:shadow-lg hover:shadow-cyan-500/50 transition-all hover:-translate-y-1"
                        >
                            {locale === "en" ? "Get in Touch" : "Contactar"}
                        </a>
                    </div>
                </div>
            </div>
        </section>
    </div>
</Layout>

<style>
    /* Smooth scroll behavior */
    html {
        scroll-behavior: smooth;
    }
</style>
