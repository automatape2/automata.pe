---
import Layout from "../../layouts/Layout.astro";
import Hero from "../../components/Hero.astro";
import Projects from "../../components/Projects.astro";
import LinkedInPosts from "../../components/LinkedInPosts.astro";
import Contact from "../../components/Contact.astro";
import { getTranslations } from "../../i18n/utils";

const t = getTranslations("en");
---

<Layout title="Portfolio | FullStack Developer">
    <div class="container mx-auto px-6 md:px-8 lg:px-12 pt-24 pb-12 max-w-7xl">
        <Hero t={t.hero} />
        <Projects t={t.projects} />
    </div>
    <GitRepositories t={t.gitRepositories} />
    <LinkedInPosts t={t.linkedInPosts} />
    <div class="container mx-auto px-6 md:px-8 lg:px-12 pt-24 pb-12 max-w-7xl">
        <Contact t={t.contact} />
    </div>
</Layout>
