---
interface Props {
    t: {
        sectionTitle: string;
    };
}

const { t } = Astro.props;

const skills = [
    { name: "Laravel", icon: "devicon-laravel-plain" },
    { name: "Python", icon: "devicon-python-plain" },
    { name: "AWS", icon: "devicon-amazonwebservices-original" },
    { name: "Docker", icon: "devicon-docker-plain" },
    { name: "AI Automation", icon: "devicon-robot-plain" }, // Placeholder icon class
    { name: "Architecture", icon: "devicon-archlinux-plain" }, // Placeholder
    { name: "Security", icon: "devicon-security-plain" }, // Placeholder
];
---

<section id="skills" class="py-20">
    <h2 class="text-3xl font-bold mb-12 flex items-center gap-4">
        <span class="text-cyan-400">03.</span>
        {t.sectionTitle}
        <span class="h-px bg-slate-700 flex-grow max-w-xs"></span>
    </h2>

    <div class="grid grid-cols-2 md:grid-cols-4 gap-6">
        {
            skills.map((skill) => (
                <div class="bg-slate-800/50 p-6 rounded-lg border border-slate-700 hover:border-cyan-400/50 hover:bg-slate-800 transition-all group">
                    <h3 class="text-lg font-semibold text-slate-200 group-hover:text-cyan-400 transition-colors">
                        {skill.name}
                    </h3>
                </div>
            ))
        }
    </div>
</section>
