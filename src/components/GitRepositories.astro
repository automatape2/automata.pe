---
interface Props {
    t: any;
}

const { t } = Astro.props;
---

<section id="git-repos" class="py-24">
    <div class="text-center mb-16" data-animate="fade-up">
        <span class="tag-modern mb-4 inline-block">Open Source</span>
        <h2 class="text-4xl md:text-5xl font-bold gradient-text-static">
            {t.sectionTitle}
        </h2>
        <p class="mt-6 text-lg leading-8 text-slate-400 max-w-2xl mx-auto">
            {t.subtitle}
        </p>
        <div class="section-divider max-w-xs mx-auto mt-6"></div>
    </div>

    <div
        class="grid grid-cols-1 gap-6 lg:grid-cols-2 max-w-6xl mx-auto px-6"
        data-stagger="0.1"
    >
        {
            t.items.map((repo) => (
                <a
                    href={repo.url}
                    target="_blank"
                    rel="noopener noreferrer"
                    class="card-modern card-glow p-8 group"
                >
                    <div class="flex items-center gap-x-4 mb-4">
                        <div class="w-12 h-12 rounded-2xl glass flex items-center justify-center group-hover:glow-cyan transition-all">
                            <svg
                                xmlns="http://www.w3.org/2000/svg"
                                viewBox="0 0 24 24"
                                class="h-6 w-6 text-slate-400 group-hover:text-cyan-400 transition-colors"
                                fill="currentColor"
                            >
                                <path d="M13 2.05C12.67 2.02 12.34 2 12 2c-5.52 0-10 4.48-10 10 0 4.42 2.87 8.17 6.84 9.5.5.09.68-.22.68-.48 0-.24-.01-1.02-.01-1.85-2.78.6-3.37-1.19-3.37-1.19-.45-1.15-1.11-1.47-1.11-1.47-.91-.62.07-.6.07-.6 1 .07 1.53 1.03 1.53 1.03.89 1.52 2.34 1.08 2.91.83.09-.65.35-1.09.63-1.34-2.22-.25-4.55-1.11-4.55-4.94 0-1.09.39-1.99 1.03-2.69-.1-.25-.45-1.27.1-2.65 0 0 .84-.27 2.75 1.02A9.58 9.58 0 0 1 12 6.84c.85.01 1.7.11 2.5.33 1.91-1.29 2.75-1.02 2.75-1.02.55 1.38.2 2.4.1 2.65.64.7 1.03 1.6 1.03 2.69 0 3.84-2.34 4.68-4.57 4.93.36.31.68.92.68 1.85 0 1.34-.01 2.42-.01 2.75 0 .27.18.58.69.48A10 10 0 0 0 22 12c0-5.52-4.48-10-10-10z" />
                            </svg>
                        </div>
                        <h3 class="text-lg font-semibold leading-6 text-cyan-400 group-hover:text-glow-cyan">
                            {repo.name}
                        </h3>
                    </div>

                    <p class="text-base leading-7 text-slate-400 mb-6 line-clamp-2">
                        {repo.description}
                    </p>

                    <div class="flex items-center gap-x-6">
                        <div class="flex items-center gap-x-2">
                            <span class="h-3 w-3 rounded-full bg-gradient-to-r from-cyan-500 to-blue-500" />
                            <span class="text-sm text-slate-400">
                                {repo.language}
                            </span>
                        </div>
                        <div class="flex items-center gap-x-2">
                            <svg
                                xmlns="http://www.w3.org/2000/svg"
                                viewBox="0 0 24 24"
                                class="h-5 w-5 text-yellow-500"
                                fill="currentColor"
                            >
                                <path d="M12 17.27l-5.18 2.73 1-5.81-4.24-4.14 5.83-.84L12 2l2.59 5.21 5.83.84-4.24 4.14 1 5.81z" />
                            </svg>
                            <span class="text-sm text-slate-400">
                                {repo.stars}
                            </span>
                        </div>
                        <div class="flex items-center gap-x-2">
                            <svg
                                xmlns="http://www.w3.org/2000/svg"
                                viewBox="0 0 24 24"
                                class="h-5 w-5 text-slate-400"
                                fill="currentColor"
                            >
                                <path d="M6 3C3.79 3 2 4.79 2 7v10c0 2.21 1.79 4 4 4h3v-2H6c-1.1 0-2-.9-2-2V7c0-1.1.9-2 2-2h3V3H6zm12 0h-3v2h3c1.1 0 2 .9 2 2v10c0 1.1-.9 2-2 2h-3v2h3c2.21 0 4-1.79 4-4V7c0-2.21-1.79-4-4-4z" />
                            </svg>
                            <span class="text-sm text-slate-400">
                                {repo.forks}
                            </span>
                        </div>
                    </div>
                </a>
            ))
        }
    </div>

    <div class="mt-16 text-center" data-animate="fade-up" data-delay="0.3">
        <a
            href="https://github.com/your-username"
            target="_blank"
            rel="noopener noreferrer"
            class="btn-modern btn-outline magnetic inline-flex items-center gap-2"
        >
            <svg
                xmlns="http://www.w3.org/2000/svg"
                viewBox="0 0 24 24"
                class="h-5 w-5"
                fill="currentColor"
            >
                <path
                    d="M12 2.05C12.67 2.02 12.34 2 12 2c-5.52 0-10 4.48-10 10 0 4.42 2.87 8.17 6.84 9.5.5.09.68-.22.68-.48 0-.24-.01-1.02-.01-1.85-2.78.6-3.37-1.19-3.37-1.19-.45-1.15-1.11-1.47-1.11-1.47-.91-.62.07-.6.07-.6 1 .07 1.53 1.03 1.53 1.03.89 1.52 2.34 1.08 2.91.83.09-.65.35-1.09.63-1.34-2.22-.25-4.55-1.11-4.55-4.94 0-1.09.39-1.99 1.03-2.69-.1-.25-.45-1.27.1-2.65 0 0 .84-.27 2.75 1.02A9.58 9.58 0 0 1 12 6.84c.85.01 1.7.11 2.5.33 1.91-1.29 2.75-1.02 2.75-1.02.55 1.38.2 2.4.1 2.65.64.7 1.03 1.6 1.03 2.69 0 3.84-2.34 4.68-4.57 4.93.36.31.68.92.68 1.85 0 1.34-.01 2.42-.01 2.75 0 .27.18.58.69.48A10 10 0 0 0 22 12c0-5.52-4.48-10-10-10z"
                ></path>
            </svg>
            <span>{t.viewProfile}</span>
        </a>
    </div>
</section>

<style>
    .line-clamp-2 {
        display: -webkit-box;
        -webkit-line-clamp: 2;
        -webkit-box-orient: vertical;
        overflow: hidden;
    }
</style>
