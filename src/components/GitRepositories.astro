---
interface Props {
    t: any;
}

const { t } = Astro.props;
---

<section id="git-repos" class="bg-[#0d1117] py-16 sm:py-20">
    <div class="w-full px-6 md:px-8 lg:px-12 text-center">
        <h2 class="text-3xl font-bold tracking-tight text-white sm:text-4xl">
            {t.sectionTitle}
        </h2>
        <p class="mt-6 text-lg leading-8 text-slate-400">
            {t.subtitle}
        </p>
    </div>

    <div
        class="mx-auto mt-16 grid max-w-7xl grid-cols-1 gap-x-8 gap-y-10 sm:mt-20 px-6 md:px-8 lg:px-12 lg:grid-cols-2"
    >
        {
            t.items.map((repo) => (
                <a
                    href={repo.url}
                    target="_blank"
                    rel="noopener noreferrer"
                    class="rounded-2xl bg-[#161b22] p-8 ring-1 ring-white/10 transition-all hover:ring-white/20"
                >
                    <div class="flex items-center gap-x-4">
                        <svg
                            xmlns="http://www.w3.org/2000/svg"
                            viewBox="0 0 24 24"
                            class="h-6 w-6 text-slate-400"
                            fill="currentColor"
                        >
                            <path
                                d="M13 2.05C12.67 2.02 12.34 2 12 2c-5.52 0-10 4.48-10 10 0 4.42 2.87 8.17 6.84 9.5.5.09.68-.22.68-.48 0-.24-.01-1.02-.01-1.85-2.78.6-3.37-1.19-3.37-1.19-.45-1.15-1.11-1.47-1.11-1.47-.91-.62.07-.6.07-.6 1 .07 1.53 1.03 1.53 1.03.89 1.52 2.34 1.08 2.91.83.09-.65.35-1.09.63-1.34-2.22-.25-4.55-1.11-4.55-4.94 0-1.09.39-1.99 1.03-2.69-.1-.25-.45-1.27.1-2.65 0 0 .84-.27 2.75 1.02A9.58 9.58 0 0 1 12 6.84c.85.01 1.7.11 2.5.33 1.91-1.29 2.75-1.02 2.75-1.02.55 1.38.2 2.4.1 2.65.64.7 1.03 1.6 1.03 2.69 0 3.84-2.34 4.68-4.57 4.93.36.31.68.92.68 1.85 0 1.34-.01 2.42-.01 2.75 0 .27.18.58.69.48A10 10 0 0 0 22 12c0-5.52-4.48-10-10-10z"
                            />
                        </svg>
                        <h3 class="text-lg font-semibold leading-6 text-[#58a6ff]">
                            {repo.name}
                        </h3>
                    </div>

                    <p class="mt-6 text-base leading-7 text-slate-400">
                        {repo.description}
                    </p>

                    <div class="mt-6 flex items-center gap-x-6">
                        <div class="flex items-center gap-x-2">
                            <span class="h-2 w-2 rounded-full bg-blue-500" />
                            <span class="text-sm text-slate-400">
                                {repo.language}
                            </span>
                        </div>
                        <div class="flex items-center gap-x-2">
                            <svg
                                xmlns="http://www.w3.org/2000/svg"
                                viewBox="0 0 24 24"
                                class="h-5 w-5 text-slate-400"
                                fill="currentColor"
                            >
                                <path
                                    d="M12 17.27l-5.18 2.73 1-5.81-4.24-4.14 5.83-.84L12 2l2.59 5.21 5.83.84-4.24 4.14 1 5.81z"
                                />
                            </svg>
                            <span class="text-sm text-slate-400">
                                {repo.stars}
                            </span>
                        </div>
                        <div class="flex items-center gap-x-2">
                            <svg
                                xmlns="http://www.w3.org/2000/svg"
                                viewBox="0 0 24 24"
                                class="h-5 w-5 text-slate-400"
                                fill="currentColor"
                            >
                                <path
                                    d="M10 6c-1.1 0-2 .9-2 2s.9 2 2 2 2-.9 2-2-.9-2-2-2zm0 8c-2.21 0-4 1.79-4 4s1.79 4 4 4 4-1.79 4-4-1.79-4-4-4zm0 6c-1.1 0-2-.9-2-2s.9-2 2-2 2 .9 2 2-.9 2-2 2zm6-14c-1.1 0-2 .9-2 2s.9 2 2 2 2-.9 2-2-.9-2-2-2zm0 8c-2.21 0-4 1.79-4 4s1.79 4 4 4 4-1.79 4-4-1.79-4-4-4zm0 6c-1.1 0-2-.9-2-2s.9-2 2-2 2 .9 2 2-.9 2-2 2z"
                                />
                            </svg>
                            <span class="text-sm text-slate-400">
                                {repo.forks}
                            </span>
                        </div>
                    </div>
                </a>
            ))
        }
    </div>

    <div class="mt-16 text-center">
        <a
            href="https://github.com/your-username"
            target="_blank"
            rel="noopener noreferrer"
            class="inline-flex items-center gap-2 rounded-full bg-slate-800 px-6 py-3 text-sm font-semibold text-white shadow-sm ring-1 ring-slate-700 transition-all hover:bg-slate-700"
        >
            <svg
                xmlns="http://www.w3.org/2000/svg"
                viewBox="0 0 24 24"
                class="h-5 w-5"
                fill="currentColor"
            >
                <path
                    d="M12 2.05C12.67 2.02 12.34 2 12 2c-5.52 0-10 4.48-10 10 0 4.42 2.87 8.17 6.84 9.5.5.09.68-.22.68-.48 0-.24-.01-1.02-.01-1.85-2.78.6-3.37-1.19-3.37-1.19-.45-1.15-1.11-1.47-1.11-1.47-.91-.62.07-.6.07-.6 1 .07 1.53 1.03 1.53 1.03.89 1.52 2.34 1.08 2.91.83.09-.65.35-1.09.63-1.34-2.22-.25-4.55-1.11-4.55-4.94 0-1.09.39-1.99 1.03-2.69-.1-.25-.45-1.27.1-2.65 0 0 .84-.27 2.75 1.02A9.58 9.58 0 0 1 12 6.84c.85.01 1.7.11 2.5.33 1.91-1.29 2.75-1.02 2.75-1.02.55 1.38.2 2.4.1 2.65.64.7 1.03 1.6 1.03 2.69 0 3.84-2.34 4.68-4.57 4.93.36.31.68.92.68 1.85 0 1.34-.01 2.42-.01 2.75 0 .27.18.58.69.48A10 10 0 0 0 22 12c0-5.52-4.48-10-10-10z"
                />
            </svg>
            {t.viewProfile}
        </a>
    </div>
</section>