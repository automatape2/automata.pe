---
<section id="contact" class="py-20">
    <div class="max-w-4xl mx-auto text-center">
        <h2 class="text-3xl font-bold mb-4 text-slate-100">{t.title}</h2>
        <p class="text-slate-400 mb-12 text-lg">
            {t.description}
        </p>

        <!-- Email -->
        <div class="mb-12">
            <p class="text-sm text-slate-500 uppercase tracking-wider mb-3">{t.emailLabel}</p>
            <a 
                href={`mailto:${t.email}`}
                class="inline-flex items-center gap-3 text-2xl md:text-3xl font-semibold text-cyan-400 hover:text-cyan-300 transition-colors group break-all"
            >
                <svg class="w-8 h-8 text-slate-500 group-hover:text-cyan-400 transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
                </svg>
                {t.email}
            </a>
        </div>

        <!-- Social Links -->
        <div>
            <p class="text-sm text-slate-500 uppercase tracking-wider mb-6">{t.socialLabel}</p>
            <div class="flex justify-center gap-6">
                {socialLinks.map((social) => (
                    <a
                        href={social.url}
                        target="_blank"
                        rel="noopener noreferrer"
                        class="group relative"
                        aria-label={social.name}
                    >
                        <div class="p-4 rounded-lg bg-slate-800/50 border border-slate-700 hover:border-cyan-400/50 hover:bg-slate-800 transition-all">
                            <span class="text-slate-400 group-hover:text-cyan-400 transition-colors" set:html={social.icon} />
                        </div>
                        <!-- Tooltip -->
                        <span class="absolute -bottom-10 left-1/2 -translate-x-1/2 opacity-0 group-hover:opacity-100 transition-opacity text-xs text-slate-400 whitespace-nowrap">
                            {social.name}
                        </span>
                    </a>
                ))}
            </div>
        </div>
    </div>
</section>