---
interface Props {
    t: {
        title: string;
        description: string;
        cta: string;
    };
}

const { t } = Astro.props;
---

<section id="contact" class="py-20 text-center">
    <h2 class="text-3xl font-bold mb-8 text-slate-100">{t.title}</h2>
    <p class="text-slate-400 max-w-2xl mx-auto mb-12 text-lg">
        {t.description}
    </p>
    <a
        href="mailto:contacto@ejemplo.com"
        class="inline-block px-8 py-4 bg-transparent border-2 border-cyan-500 text-cyan-400 font-bold rounded hover:bg-cyan-500/10 transition-colors"
    >
        {t.cta}
    </a>
</section>
