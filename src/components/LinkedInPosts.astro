---
interface Props {
    t: any;
}

const { t } = Astro.props;

import { personalInfo } from "../config/personal";
---

<section id="linkedin" class="py-24">
    <div class="text-center mb-16" data-animate="fade-up">
        <span class="tag-modern mb-4 inline-block">Insights</span>
        <h2 class="text-4xl md:text-5xl font-bold gradient-text-static">
            {t.sectionTitle}
        </h2>
        <p class="mt-6 text-lg leading-8 text-slate-400 max-w-2xl mx-auto">
            {t.subtitle}
        </p>
        <div class="section-divider max-w-xs mx-auto mt-6"></div>
    </div>

    <div
        class="grid grid-cols-1 gap-6 md:grid-cols-2 lg:grid-cols-3 max-w-7xl mx-auto px-6"
        data-stagger="0.08"
    >
        {
            t.items.map((post) => (
                <a
                    href={post.link}
                    target="_blank"
                    rel="noopener noreferrer"
                    class="card-modern card-glow p-6 group"
                >
                    <div class="flex items-center justify-between mb-4">
                        <div class="flex items-center gap-2">
                            <div class="w-10 h-10 rounded-xl bg-[#0A66C2]/10 flex items-center justify-center">
                                <svg
                                    class="w-5 h-5 text-[#0A66C2]"
                                    fill="currentColor"
                                    viewBox="0 0 24 24"
                                >
                                    <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z" />
                                </svg>
                            </div>
                            <span class="text-xs text-slate-400 font-medium">
                                LinkedIn
                            </span>
                        </div>
                        <span class="text-xs text-slate-500 tag-modern">
                            {post.date}
                        </span>
                    </div>

                    <p class="text-slate-300 text-sm leading-relaxed mb-6 line-clamp-4 group-hover:text-slate-200 transition-colors">
                        {post.content}
                    </p>

                    <div class="flex items-center gap-6 pt-4 border-t border-white/5">
                        <div class="flex items-center gap-2 text-slate-400">
                            <svg
                                class="w-4 h-4"
                                fill="none"
                                stroke="currentColor"
                                viewBox="0 0 24 24"
                            >
                                <path
                                    stroke-linecap="round"
                                    stroke-linejoin="round"
                                    stroke-width="2"
                                    d="M14 10h4.764a2 2 0 011.789 2.894l-3.5 7A2 2 0 0115.263 21h-4.017c-.163 0-.326-.02-.485-.06L7 20m7-10V5a2 2 0 00-2-2h-.095c-.5 0-.905.405-.905.905 0 .714-.211 1.412-.608 2.006L7 11v9m7-10h-2M7 20H5a2 2 0 01-2-2v-6a2 2 0 012-2h2.5"
                                />
                            </svg>
                            <span class="text-xs">{post.likes}</span>
                        </div>
                        <div class="flex items-center gap-2 text-slate-400">
                            <svg
                                class="w-4 h-4"
                                fill="none"
                                stroke="currentColor"
                                viewBox="0 0 24 24"
                            >
                                <path
                                    stroke-linecap="round"
                                    stroke-linejoin="round"
                                    stroke-width="2"
                                    d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"
                                />
                            </svg>
                            <span class="text-xs">{post.comments}</span>
                        </div>
                        <div class="ml-auto">
                            <span class="text-cyan-400 text-xs font-medium flex items-center gap-1 opacity-0 group-hover:opacity-100 translate-x-2 group-hover:translate-x-0 transition-all">
                                Read More
                                <svg
                                    class="w-3 h-3"
                                    fill="none"
                                    stroke="currentColor"
                                    viewBox="0 0 24 24"
                                >
                                    <path
                                        stroke-linecap="round"
                                        stroke-linejoin="round"
                                        stroke-width="2"
                                        d="M17 8l4 4m0 0l-4 4m4-4H3"
                                    />
                                </svg>
                            </span>
                        </div>
                    </div>
                </a>
            ))
        }
    </div>

    <div class="mt-16 text-center" data-animate="fade-up" data-delay="0.3">
        <a
            href={personalInfo.socialLinks.linkedin}
            target="_blank"
            rel="noopener noreferrer"
            class="btn-modern magnetic inline-flex items-center gap-2"
            style="background: linear-gradient(135deg, #0A66C2, #004182);"
        >
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                <path
                    d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"
                ></path>
            </svg>
            <span>{t.viewProfile}</span>
        </a>
    </div>
</section>

<style>
    .line-clamp-4 {
        display: -webkit-box;
        -webkit-line-clamp: 4;
        -webkit-box-orient: vertical;
        overflow: hidden;
    }
</style>
