---
interface Props {
    t: any;
}

const { t } = Astro.props;
---

<section id="projects" class="py-20">
    <h2 class="text-3xl font-bold mb-12 text-center">
        {t.sectionTitle}
    </h2>

    <div class="grid md:grid-cols-3 gap-8">
        {
            t.items.map((project) => (
                <a
                    href={`/projects/${project.slug}`}
                    class="bg-slate-900 rounded-xl overflow-hidden border border-slate-800 hover:border-cyan-500/30 transition-all hover:-translate-y-2 group block cursor-pointer"
                >
                    <div class="h-48 overflow-hidden">
                        <img
                            src={project.image}
                            alt={project.title}
                            class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-110"
                        />
                    </div>
                    <div class="p-6 space-y-4">
                        <h3 class="text-xl font-bold text-slate-100 group-hover:text-cyan-400 transition-colors">
                            {project.title}
                        </h3>
                        <p class="text-slate-400 text-sm leading-relaxed">
                            {project.description}
                        </p>
                        <div class="flex flex-wrap gap-2 pt-2">
                            {project.tech.map((tech) => (
                                <span class="text-xs font-mono text-cyan-400 bg-cyan-950/30 px-2 py-1 rounded">
                                    {tech}
                                </span>
                            ))}
                        </div>
                        <div class="flex items-center gap-2 text-cyan-400 text-sm font-medium pt-2">
                            <span>View Details</span>
                            <svg
                                class="w-4 h-4 transition-transform group-hover:translate-x-1"
                                fill="none"
                                stroke="currentColor"
                                viewBox="0 0 24 24"
                            >
                                <path
                                    stroke-linecap="round"
                                    stroke-linejoin="round"
                                    stroke-width="2"
                                    d="M9 5l7 7-7 7"
                                />
                            </svg>
                        </div>
                    </div>
                </a>
            ))
        }
    </div>
</section>
