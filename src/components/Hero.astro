---
interface Props {
    t: {
        greeting: string;
        title: string;
        titleHighlight: string;
        titleEnd: string;
        description: string;
        cta1: string;
        cta2: string;
        chatWithAI: string;
    };
}

const { t } = Astro.props;
---

<section class="min-h-[80vh] flex items-center py-20">
    <div class="grid md:grid-cols-2 gap-12 items-center w-full">
        <!-- Left side: Text content -->
        <div class="space-y-4">
            <span class="text-cyan-400 font-medium tracking-wider text-sm">
                {t.greeting}
            </span>
            <h1
                class="text-3xl md:text-5xl lg:text-6xl font-bold leading-tight"
            >
                {t.title}<span
                    class="text-transparent bg-clip-text bg-gradient-to-r from-cyan-400 to-purple-600"
                    >{t.titleHighlight}</span
                >{t.titleEnd}
            </h1>
            <p
                class="text-base md:text-lg text-slate-400 max-w-xl leading-relaxed"
            >
                {t.description}
            </p>
            <div class="flex flex-wrap gap-4 pt-4">
                <a
                    href="#projects"
                    class="px-8 py-3 bg-cyan-500 hover:bg-cyan-600 text-white font-semibold rounded-lg transition-all shadow-[0_0_20px_rgba(6,182,212,0.3)] hover:shadow-[0_0_30px_rgba(6,182,212,0.5)]"
                >
                    {t.cta1}
                </a>
                <button
                    id="open-ai-chat"
                    class="px-8 py-3 bg-gradient-to-r from-purple-600 to-pink-600 hover:from-purple-700 hover:to-pink-700 text-white font-semibold rounded-lg transition-all shadow-[0_0_20px_rgba(147,51,234,0.3)] hover:shadow-[0_0_30px_rgba(147,51,234,0.5)] flex items-center gap-2"
                >
                    <span class="text-xl">ðŸ¤–</span>
                    {t.chatWithAI}
                </button>
            </div>
        </div>

        <!-- Right side: Robot image -->
        <div class="relative flex justify-center items-center">
            <!-- Animated glow effect -->
            <div
                class="absolute inset-0 bg-gradient-to-r from-cyan-500/20 to-purple-500/20 rounded-full blur-3xl animate-pulse"
            >
            </div>

            <!-- Robot image container -->
            <div
                class="relative z-10 transform hover:scale-105 transition-transform duration-300"
            >
                <img
                    src="/robot.png"
                    alt="Happy automation robot"
                    class="w-full max-w-md h-auto drop-shadow-[0_0_50px_rgba(6,182,212,0.5)]"
                />
            </div>

            <!-- Floating tech icons (optional decoration) -->
            <div
                class="absolute top-10 right-10 w-12 h-12 bg-cyan-400/10 rounded-lg flex items-center justify-center animate-bounce"
                style="animation-delay: 0.2s;"
            >
                <span class="text-2xl">âš¡</span>
            </div>
            <div
                class="absolute bottom-20 left-10 w-12 h-12 bg-purple-400/10 rounded-lg flex items-center justify-center animate-bounce"
                style="animation-delay: 0.4s;"
            >
                <span class="text-2xl">ðŸš€</span>
            </div>
        </div>
    </div>
</section>

<script>
    // Open AI chat when button is clicked
    document.addEventListener("DOMContentLoaded", () => {
        const openChatBtn = document.getElementById("open-ai-chat");
        const chatToggle = document.getElementById("chat-toggle");

        openChatBtn?.addEventListener("click", () => {
            // Trigger click on the chat toggle button
            chatToggle?.click();
        });
    });
</script>
