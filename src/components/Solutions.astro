---
import { Image } from "astro:assets";

interface SolutionItem {
    slug: string;
    title: string;
    description: string;
    tech: string[];
    image: ImageMetadata;
    demoUrl?: string;
    type: "producto" | "product" | "caso" | "case";
}

interface Props {
    t: {
        sectionTitle: string;
        subtitle: string;
        items: SolutionItem[];
    };
}

const { t } = Astro.props;

const typeLabels: Record<string, { es: string; en: string; color: string }> = {
    producto: { es: "Producto", en: "Product", color: "from-cyan-500 to-blue-500" },
    product: { es: "Producto", en: "Product", color: "from-cyan-500 to-blue-500" },
    caso: { es: "Caso de Uso", en: "Use Case", color: "from-purple-500 to-pink-500" },
    case: { es: "Caso de Uso", en: "Use Case", color: "from-purple-500 to-pink-500" }
};
---

<section id="solutions" class="py-24">
    <div class="text-center mb-16" data-animate="fade-up">
        <span class="tag-modern mb-4 inline-block">Our Work</span>
        <h2 class="text-4xl md:text-5xl font-bold gradient-text-static">
            {t.sectionTitle}
        </h2>
        <p class="mt-6 text-lg text-slate-400 max-w-2xl mx-auto">
            {t.subtitle}
        </p>
        <div class="section-divider max-w-xs mx-auto mt-6"></div>
    </div>

    <div class="bento-grid" data-stagger="0.1">
        {
            t.items.map((solution, index) => (
                <div
                    class:list={[
                        "card-modern card-glow img-hover-zoom block group",
                        index === 0 && "bento-span-2",
                    ]}
                >
                    <div class="h-52 overflow-hidden rounded-t-[1.5rem] relative">
                        <Image
                            src={solution.image}
                            alt={solution.title}
                            class="w-full h-full object-cover"
                            loading="lazy"
                            width={600}
                            height={300}
                            format="webp"
                        />
                        <!-- Type badge -->
                        <div class={`absolute top-4 left-4 px-3 py-1 rounded-full text-xs font-medium bg-gradient-to-r ${typeLabels[solution.type]?.color || 'from-cyan-500 to-blue-500'} text-white`}>
                            {typeLabels[solution.type]?.es || solution.type}
                        </div>
                    </div>
                    <div class="p-6 space-y-4">
                        <h3 class="text-xl font-bold text-slate-100 group-hover:text-cyan-400 transition-colors">
                            {solution.title}
                        </h3>
                        <p class="text-slate-400 text-sm leading-relaxed line-clamp-2">
                            {solution.description}
                        </p>
                        <div class="flex flex-wrap gap-2 pt-2">
                            {solution.tech.slice(0, 4).map((tech) => (
                                <span class="tag-modern">{tech}</span>
                            ))}
                            {solution.tech.length > 4 && (
                                <span class="tag-modern">
                                    +{solution.tech.length - 4}
                                </span>
                            )}
                        </div>
                        {solution.demoUrl && (
                            <div class="pt-4">
                                <a
                                    href={solution.demoUrl}
                                    target="_blank"
                                    rel="noopener noreferrer"
                                    class="inline-flex items-center gap-2 text-cyan-400 text-sm font-medium hover:text-cyan-300 transition-colors"
                                >
                                    <span>Ver Demo</span>
                                    <svg
                                        class="w-4 h-4 transition-transform group-hover:translate-x-1"
                                        fill="none"
                                        stroke="currentColor"
                                        viewBox="0 0 24 24"
                                    >
                                        <path
                                            stroke-linecap="round"
                                            stroke-linejoin="round"
                                            stroke-width="2"
                                            d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"
                                        />
                                    </svg>
                                </a>
                            </div>
                        )}
                    </div>
                </div>
            ))
        }
    </div>
</section>
