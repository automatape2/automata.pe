---
interface Props {
    t: {
        sectionTitle: string;
        items: Array<{
            company: string;
            position: string;
            period: string;
            description: string;
            tech: string[];
        }>;
    };
}

const { t } = Astro.props;
---

<section id="experience" class="py-20">
    <h2 class="text-3xl font-bold mb-12 text-center">
        {t.sectionTitle}
    </h2>

    <div class="space-y-6">
        {
            t.items.map((exp) => (
                <div class="bg-slate-900 rounded-xl border border-slate-800 hover:border-cyan-500/30 transition-all hover:-translate-y-1 group p-6">
                    <div class="flex flex-col md:flex-row md:items-start justify-between gap-2 mb-3">
                        <div>
                            <h3 class="text-xl font-bold text-slate-100 group-hover:text-cyan-400 transition-colors">
                                {exp.position}
                            </h3>
                            <p class="text-cyan-400 font-medium">
                                {exp.company}
                            </p>
                        </div>
                        <span class="text-slate-500 text-sm font-mono">
                            {exp.period}
                        </span>
                    </div>

                    <p class="text-slate-400 text-sm leading-relaxed mb-4">
                        {exp.description}
                    </p>

                    <div class="flex flex-wrap gap-2">
                        {exp.tech.map((tech) => (
                            <span class="text-xs font-mono text-cyan-400 bg-cyan-950/30 px-2 py-1 rounded">
                                {tech}
                            </span>
                        ))}
                    </div>
                </div>
            ))
        }
    </div>
</section>
